<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rilixtech.countrycodepicker.CustomSizeFragment"
    >

  <androidx.cardview.widget.CardView style="@style/parentCard">

    <ScrollView style="@style/parentScrollView">

      <LinearLayout style="@style/parentLinear">

        <TextView
            android:text="Custom font"
            style="@style/fragmentTitle"
            />

        <TextView
            android:text="Use your own font with CCP"
            style="@style/fragmentSubTitle"
            />

        <TextView
            android:text="How to set custom fonts?"
            style="@style/sectionText"
            />

        <TextView
            android:text="\u2022 Font can be set programmatically only. To apply external fonts, you will need .ttf file for font of your choice."
            style="@style/pointText"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

          <TextView
              android:text="Few examples"
              android:textStyle="bold"
              style="@style/pointText"
              />

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="16dp"
              android:layout_marginLeft="32dp"
              android:layout_marginRight="16dp"
              android:background="#222124"
              android:padding="8dp"
              >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center_vertical"
                  >

                <com.rilixtech.widget.countrycodepicker.CountryCodePicker
                    android:id="@+id/ccp1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:ccp_defaultNameCode="gr"
                    app:ccp_textColor="@android:color/white"
                    app:ccp_textFont="bookos.ttf"
                    app:ccp_backgroundColor="#222124"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:freezesText="true"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:text="(Default)"
                    android:textColor="@android:color/white"
                    />
              </LinearLayout>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center_vertical"
                  >

                <com.rilixtech.widget.countrycodepicker.CountryCodePicker
                    android:id="@+id/ccp2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:ccp_defaultNameCode="gr"
                    app:ccp_textColor="@android:color/white"
                    app:ccp_backgroundColor="#222124"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:freezesText="true"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:text="(bookos)"
                    android:textColor="@android:color/white"
                    />
              </LinearLayout>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center_vertical"
                  >

                <com.rilixtech.widget.countrycodepicker.CountryCodePicker
                    android:id="@+id/ccp3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:ccp_defaultNameCode="gr"
                    app:ccp_textColor="@android:color/white"
                    app:ccp_backgroundColor="#222124"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:freezesText="true"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:text="(hack)"
                    android:textColor="@android:color/white"
                    />
              </LinearLayout>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center_vertical"
                  >

                <com.rilixtech.widget.countrycodepicker.CountryCodePicker
                    android:id="@+id/ccp4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:ccp_defaultNameCode="gr"
                    app:ccp_textColor="@android:color/white"
                    app:ccp_backgroundColor="#222124"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:freezesText="true"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:text="(playfair)"
                    android:textColor="@android:color/white"
                    />
              </LinearLayout>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center_vertical"
                  >

                <com.rilixtech.widget.countrycodepicker.CountryCodePicker
                    android:id="@+id/ccp5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:ccp_defaultNameCode="gr"
                    app:ccp_textColor="@android:color/white"
                    app:ccp_backgroundColor="#222124"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:freezesText="true"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:text="(raleway)"
                    android:textColor="@android:color/white"
                    />
              </LinearLayout>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center_vertical"
                  >

                <com.rilixtech.widget.countrycodepicker.CountryCodePicker
                    android:id="@+id/ccp6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:ccp_defaultNameCode="gr"
                    app:ccp_textColor="@android:color/white"
                    app:ccp_backgroundColor="#222124"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:freezesText="true"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:text="(titillium)"
                    android:textColor="@android:color/white"
                    />
              </LinearLayout>
            </LinearLayout>
          </RelativeLayout>

          <TextView
              android:paddingLeft="32dp"
              android:text='* Rendering of font sometimes depends on the device.'
              style="@style/pointText"
              />
        </LinearLayout>

        <TextView
            android:text="\u2022 Step 1: create a folder named 'assets' under 'app/src/main/' folder. If you already have 'app/src/main/assets' then jump to next step."
            style="@style/pointText"
            />

        <TextView
            android:text="\u2022 Step 2: put your font's .ttf file in assets folder. For example if file name is 'myfonts.ttf', it should be 'app/src/main/assets/myfonts.ttf'. Make sure that the extension '.ttf' have contain small letters only. '.TTF' might not work."
            style="@style/pointText"
            />

        <TextView
            android:text="\u2022 Step 3: now prepare typeFace using "
            style="@style/pointText"
            />


        <TextView
            android:layout_marginLeft="20dp"
            android:text='Typeface typeFace=Typeface.createFromAsset(getContext().getAssets(),"myfonts.ttf");'
            android:textStyle="italic"
            style="@style/pointText"
            />

        <TextView
            android:text="\u2022 Step 4: finally apply the type face on ccp"
            style="@style/pointText"
            />

        <TextView
            android:layout_marginLeft="20dp"
            android:text='ccp.setTypeFace(typeFace);'
            android:textStyle="italic"
            style="@style/pointText"
            />
        <TextView
            android:layout_marginLeft="50dp"
            android:text='OR'
            android:textStyle="italic"
            style="@style/pointText"
            />

        <TextView
            android:layout_marginLeft="20dp"
            android:text='ccp.setTypeFace(typeFace,customStyle);'
            android:textStyle="italic"
            style="@style/pointText"
            />


        <Button
            android:id="@+id/button_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="End Of Feature."
            style="@style/Widget.AppCompat.Button.Colored"
            />
      </LinearLayout>
    </ScrollView>
  </androidx.cardview.widget.CardView>

</FrameLayout>
